<div class="row">
    <div class="pull-right">

        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Scale Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Scale up',   heroku_scale_path(state: 'up')   %></li>
            <li><%= link_to 'Scale down', heroku_scale_path(state: 'down') %></li>
          </ul>
        </div>

    </div>
  <h1>Current Heroku State</h1>
</div>


<h1>Servers</h1>
<div class="row">



        <table class="table">
            <thead>
              <tr>
                <th>Type</th>
                <th>Quantity</th>
                <th>Size</th>
              </tr>
            </thead>

            <tbody>
              <% @current_scale.each do |dyno| %>
                <tr>
                  <td><%= dyno.process.titleize  %></td>
                  <td><%= dyno.count %></td>
                  <td><%= dyno.size %></td>
                </tr>
              <% end %>
            </tbody>
        </table>



</div>


<h1>Configuration Variables</h1>
<div class="row">

    
    
        <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Value</th>
              </tr>
            </thead>

            <tbody>
              <% @current_config.each do |k,v| %>
                <tr>
                  <td><%= k %></td>
                  <td><%= v %></td>
                </tr>
              <% end %>
            </tbody>
        </table>

    

</div>

 




