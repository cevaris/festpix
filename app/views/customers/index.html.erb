<div class="pull-right">
  <%= link_to new_customer_path, :class => "btn btn-default" do %>
    <i class="fa fa-plus"> Customer</i>
  <% end %>
</div>
<div>
  <h1>Customers</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Customer</th>
      <th># of Events</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.events.count %></td>
        <td>

          <!-- Split button -->
          <div class="btn-group" style="width:100px;">
            <%= link_to 'Show', customer, tyle: 'button', class: 'btn btn-default' %> 
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', customer %></li>
              <li><%= link_to 'Edit', edit_customer_path(customer) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>          
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


