<div class="pull-right">
  <%= link_to new_event_path, :class => "btn btn-default" do %>
    <i class="fa fa-plus"> Event</i>
  <% end %>
</div>

<div>
  <h1>Events</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th># of Session</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= "#{event.name} - #{event.customer.name if event.customer}" %></td>
        <td><%= event.photo_sessions.count %></td>
        <td>
          
          <!-- Split button -->
          <div class="btn-group" style="width:100px;">
            <%= link_to 'Show', event, type: 'buton', class: 'btn btn-default' %>
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', event %></li>
              <li><%= link_to 'Edit', edit_event_path(event) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>








