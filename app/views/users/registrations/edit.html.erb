<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="col-sm-3 col-md-3"></div>

<div class="col-sm-6 col-md-6">
<%= form_for(resource,
    :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <div class="bs-callout bs-callout-danger">
  <%= devise_error_messages! %>
  </div>

 <!--  <div><%= f.label :email %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% else %>
    <span class="label label-success"><i class="icon-ok"></i> <%= t 'settings.email_confirmed' %></span>
  <% end %>
    <br/><br/>
    <%= f.email_field :email, :autofocus => true %>
  </div> -->

  <meta name="format-detection" content="telephone=no">
  <div class="field">
    <%= f.label :phone_number %> (format should be '3031234567', not '303-123-4567')<br/>
    <%= f.text_field :phone_number, class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, :autocomplete => "off", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, required: true, class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <%= f.fields_for :customer do |customer_form| %>

  <div class="field">
    <%= customer_form.label :name %> <br/>
    <%= customer_form.text_field :name, class: 'form-control' %>
  </div>

  <h3>Click to Edit Colors</h3>

  <div class="field">
    <%= customer_form.label :color_one, 'Background Color' %>: <%= customer_form.text_field :color_one, class: 'form-control' %>
  </div>
  <div class="field">
    <%= customer_form.label :color_two, 'Outline Color' %>: <%= customer_form.text_field :color_two, class: 'form-control' %>
  </div>
  <div class="field">
    <%= customer_form.label :color_three, 'Text Color' %>: <%= customer_form.text_field :color_three, class: 'form-control'  %>
  </div>
  <% end %>

  <div>
    <%= link_to "Cancel", current_user, data: { confirm: "Cancel update?" }, class: 'btn btn-danger' %>
    <%= f.submit "Update", class: 'btn' %>
  </div>
<% end %>
</div>

