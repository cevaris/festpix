<div class="container">
  <meta name="format-detection" content="telephone=no">

  <%= form_for([resource, resource.with_customer],
      :as => resource_name, :url => registration_path(resource_name), html: {class: 'col-md-8 col-md-offset-2 bottom-buffer-50'}) do |f| %>

  <h2 class="pull-left">New Account Registration</h2>
  <p class="pull-right h2-vertical-align">Already have an account? <%= link_to "Login Here", new_user_session_path %></p>
  <div class="clearfix"></div>
  <hr>

  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.fields_for :customer do |customer_form| %>
    <%= customer_form.label :name %>
    <br />
    <%= customer_form.text_field :name, class: 'form-control' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <br />

  <div class="form-group">
    <%= f.label :password %>
    <br />
    <%= f.password_field :password, class: 'form-control' %>
  </div><br />

  <!-- <div><%= f.label :password_confirmation %><br /> -->
  <!-- <%#= f.password_field :password_confirmation %></div><br /> -->

  <div>
    <%= f.submit "Submit", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
  <br/>
  <% end %>

</div>
